<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/refraction_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/coating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/refraction"
            android:textAllCaps="true"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:padding="@dimen/text_vsmall"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/coating"
            android:text="@string/point"
            android:textAllCaps="true"
            android:layout_marginLeft="@dimen/fab_margin"
            android:textSize="@dimen/text_medium"
            android:padding="@dimen/text_vsmall"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coating"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/fab_margin"
             >
            <RadioButton
                android:id="@+id/single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/single"
                android:textAllCaps="true"/>

            <RadioButton
                android:id="@+id/both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/both"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/fab_margin"/>
        </RadioGroup>


        <LinearLayout
            android:id="@+id/title_headers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_grp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/fab_margin"
            >
            
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text=""
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/sphere"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/cylind"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/axis"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/addition"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inputvalue_right_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_headers"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/fab_margin"
            >
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/rightside"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/r"/>
            <EditText
                android:id="@+id/sphere_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/cyclind_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/axis_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/addition_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/inputvalue_left_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputvalue_right_layout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/text_vsmall"
            >
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/leftside"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:text="@string/l"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/sphere_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/cyclind_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/axis_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/addition_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp"
                android:maxLength="5"
                android:maxLines="1"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/rectangle"/>
        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/valuessteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_xlarge"
            android:layout_marginLeft="@dimen/text_xlarge"
            android:layout_marginRight="@dimen/text_xlarge"
            android:textColor="@android:color/holo_blue_light"
            android:layout_below="@+id/inputvalue_left_layout"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/errortxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_small"
            android:layout_marginLeft="@dimen/text_xlarge"
            android:layout_marginRight="@dimen/text_xlarge"
            android:textColor="@android:color/holo_blue_light"
            android:layout_below="@+id/valuessteps"/>


    </RelativeLayout>
        <View
            android:layout_below="@+id/refraction_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"/>
</RelativeLayout>
